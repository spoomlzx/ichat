    <select id="getUserList" resultType="com.lan.ichat.model.User">
        SELECT
            `id`,
            `username`,
            `nickname`,
            `telephone`,
            `motto`,
            `password`,
            `avatar`,
            `create_time`,
            `online`,
            `enabled`,
            `last_login_time`,
            `gender`,
            `email`,
            `region`
        FROM ichat_user
    </select>

    <select id="getUserByUsername" resultType="com.lan.ichat.model.User">
        SELECT
            `id`,
            `username`,
            `nickname`,
            `telephone`,
            `motto`,
            `password`,
            `avatar`,
            `create_time`,
            `online`,
            `enabled`,
            `last_login_time`,
            `gender`,
            `email`,
            `region`
        FROM ichat_user
        WHERE username = #{username}
    </select>

    <select id="getUserById" resultType="com.lan.ichat.model.User">
        SELECT
            `id`,
            `username`,
            `nickname`,
            `telephone`,
            `motto`,
            `password`,
            `avatar`,
            `create_time`,
            `online`,
            `enabled`,
            `last_login_time`,
            `gender`,
            `email`,
            `region`
        FROM ichat_user
        WHERE id = #{id}
    </select>

    <select id="getFriendList" resultType="com.lan.ichat.model.User">
        SELECT
            b.`friend_id` AS id,
            a.`username`,
            a.`nickname`,
            a.`telephone`,
            a.`motto`,
            a.`avatar`,
            a.`gender`,
            a.`region`,
            a.`email`,
            b.`remark`,
            b.`hide_my_mm`,
            b.`hide_his_mm`,
            b.`star`,
            b.`blacklist`,
            b.`chatroom`
        FROM ichat_friend b INNER JOIN ichat_user a ON a.id = b.friend_id AND b.user_id = #{id}
    </select>

    <insert id="insertFriend">
        INSERT INTO ichat_friend
        (user_id, friend_id, hide_my_mm, hide_his_mm, star, blacklist, chatroom)
        VALUES
            (#{userId}, #{friendId}, #{hideMyMM}, #{hideHisMM}, #{star}, #{blacklist}, #{chatroom})
    </insert>

    <update id="updateRemark">
        UPDATE ichat_friend
        <set>
            <if test="remark != null">remark=#{remark,jdbcType=VARCHAR}</if>
        </set>
        WHERE user_id=#{userId} and friend_id=#{friendId}
    </update>

    <update id="updateMomentSetting">
        UPDATE ichat_friend
        <set>
            <if test="hideMyMM != null">hideMyMM=#{hideMyMM,jdbcType=INTEGER},</if>
            <if test="hideHisMM != null">hideHisMM=#{hideHisMM,jdbcType=INTEGER}</if>
        </set>
        WHERE user_id=#{userId} and friend_id=#{friendId}
    </update>

    <update id="updateStar">
        UPDATE ichat_friend
        <set>
            <if test="star != null">star=#{star,jdbcType=INTEGER}</if>
        </set>
        WHERE user_id=#{userId} and friend_id=#{friendId}
